<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.metroui.org.ua/current/metro.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/Css/StyleProduct.css">
  <title>Listado de Productos</title>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container py-4">
    <h1 class="text-center mb-4">Listado de Productos</h1>
    
    <% if (products && products.length > 0) { %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Tipo de Producto</th>
            <th>Precio</th>
            <th>Categoría</th>
            <th>Imagen</th>
            <th>Descripción</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.id %></td>
              <td><%= product.nombre %></td>
              <td><%= product.tipo_de_producto %></td>
              <td><%= product.precio %></td>
              <td><%= product.categoria %></td>
              <td>
                <% if (product.imagen) { %>
                  <img src="<%= product.imagen %>" alt="<%= product.alt %>" width="100">
                <% } else { %>
                  Sin imagen
                <% } %>
              </td>
              <td><%= product.descripción %></td>
              <td>
                <a href="/products/detail/<%= product.id %>" class="btn btn-info btn-sm mb-1">Ver</a>
                <a href="/products/edit/<%= product.id %>" class="btn btn-primary btn-sm mb-1">Editar</a>
                <form action="/products/delete/<%= product.id %>" method="POST" style="display:inline-block;" 
                      onsubmit="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <div class="alert alert-info text-center">No hay productos disponibles.</div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
