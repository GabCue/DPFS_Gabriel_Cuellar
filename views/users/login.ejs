<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdn.metroui.org.ua/current/metro.css" />
    <link rel="stylesheet" href="/Css/StyleLogin.css" />
    <title>Login</title>
  </head>
  <body>
    <header>
      <div class="hsup">
        <a href="/" class="alogo">
          <img
            src="/Images/logo provisorio.png"
            alt="Logo de la empresa"
            class="logo"
          />
        </a>
      </div>
    </header>
    <main>
      <div class="centerLogin">
        <div class="center">
          <div class="elementLogin">
            <div class="user">
              <img
                src="/Images/usuario_anonimo.jpg"
                class="imgUser"
                alt="Usuario anónimo"
              />
            </div>
          </div>

          <!-- Mostrar errores si existen -->
          <% if (locals.errors) { %>
            <div class="alert alert-danger">
              <% Object.values(locals.errors).forEach(function(error) { %>
                <p><%= error.msg %></p>
              <% }); %>
            </div>
          <% } %>

          <!-- Formulario de login -->
          <form action="/users/login" method="post">
            <div class="elementLogin">
              <label for="email" class="textLogin">Email</label>
              <input
                type="email"
                name="email"
                id="email"
                class="imputLogin"
                placeholder="Escribe tu Email"
                value="<%= locals.old?.email || '' %>"
              />
            </div>
            <div class="elementLogin">
              <label for="password" class="textLogin">Contraseña</label>
              <input
                type="password"
                name="password"
                id="password"
                class="imputLogin"
                placeholder="Escribe tu contraseña"
              />
            </div>
            <div class="elementLogin">
              <label for="rememberme" class="textLogin">Recordarme</label>
              <input type="checkbox" name="rememberme" id="rememberme" />
            </div>
            <div class="elementLogin">
              <button type="submit" class="btn btn-secondary">
                Ingresar
              </button>
            </div>
          </form>

          <div class="elementLogin">
            <a href=""><i class="fa-brands fa-google fa-3x google"></i></a>
          </div>
        </div>
      </div>

      <div class="elementLogin">
        <a href="/users/register" class="btn btn-outline-primary w-100 mt-2">
          <i class="fa-solid fa-user-plus me-2"></i> Registrarse
        </a>
      </div>
    </main>

    <%- include('../Partials/footer') %>
    <script src="https://cdn.metroui.org.ua/current/metro.js"></script>
    <script
      src="https://kit.fontawesome.com/814cd6b91c.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
