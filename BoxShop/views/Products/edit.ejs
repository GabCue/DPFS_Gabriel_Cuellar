<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://cdn.metroui.org.ua/current/metro.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/Css/StyleProduct.css" />
  <title>Editar Producto: <%= product ? product.nombre : 'Producto no encontrado' %></title>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container py-4">
    <% if (product) { %>
      <h1 class="text-center mb-4">Editar Producto: <%= product.name %></h1>

      <form action="/products/update/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="bg-light p-4 rounded shadow-sm">
        
        <div class="mb-3">
          <label for="nombre" class="form-label">Nombre:</label>
          <input type="text" id="nombre" name="name" class="form-control" value="<%= product.name %>" required />
        </div>

        <div class="mb-3">
          <label for="tipo_de_producto" class="form-label">Tipo de Producto:</label>
          <select id="tipo_de_producto" name="product_type_id" class="form-control" required>
            <option value="1" <%= product.product_type_id === 1 ? 'selected' : '' %>>Digital</option>
            <option value="2" <%= product.product_type_id === 2 ? 'selected' : '' %>>Físico</option>
          </select>
        </div>


        <div class="mb-3">
          <label for="descripcion" class="form-label">Descripción:</label>
          <textarea id="descripcion" name="description" class="form-control" rows="3" required><%= product.description %></textarea>
        </div>

        <div class="mb-3">
          <label for="precio" class="form-label">Precio:</label>
          <input type="number" id="precio" name="price" class="form-control" value="<%= product.price %>" required min="0" step="0.01" />
        </div>

        <div class="mb-3">
          <label class="form-label">Categorías:</label>
          <% categories.forEach(category => { %>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                name="category_ids[]"
                id="category_<%= category.id %>"
                value="<%= category.id %>"
                <%= product.categories && product.categories.some(cat => cat.id === category.id) ? 'checked' : '' %>
              />
              <label class="form-check-label" for="category_<%= category.id %>">
                <%= category.name %>
              </label>
            </div>
          <% }) %>
        </div>

        <div class="mb-3">
          <label for="imagen" class="form-label">Imagen (opcional):</label>
          <input type="file" id="imagen" name="image" class="form-control" />
          <% if (product.image) { %>
            <p class="mt-2">Imagen actual: <img src="/images/products/<%= product.image %>" width="100" /></p>
          <% } %>
        </div>

<ul class="errors text-danger mb-3"></ul>
        <div class="text-center">
          <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
        </div>
      </form>
    <% } else { %>
      <div class="alert alert-danger text-center">Producto no encontrado.</div>
    <% } %>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
  <script src="/js/validations/editProduct.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
