<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdn.metroui.org.ua/current/metro.css" />
    <link rel="stylesheet" href="/Css/StyleRegister.css" />
    <title>Registro</title>
  </head>
  <body>
    <header>
      <div class="hsup">
        <a href="/" class="alogo">
          <img
            src="/Images/logo provisorio.png"
            alt="Logo de la empresa"
            class="logo"
          />
        </a>
      </div>
    </header>

    <main>
      <div class="centerLogin">
        <div class="center">
          <div class="elementLogin">
            <div class="user">
              <img
                src="/Images/usuario_anonimo.jpg"
                class="imgUser"
                alt="Usuario anónimo"
              />
            </div>
          </div>

     
          <% if (locals.errors) { %>
            <div class="alert alert-danger">
              <% Object.values(locals.errors).forEach(function(error) { %>
                <p><%= error.msg %></p>
              <% }); %>
            </div>
          <% } %>


          <form action="/users/register" method="post">
            <div class="elementLogin">
              <label for="first_name" class="textLogin">Nombre</label>
              <input
                type="text"
                name="first_name"
                id="first_name"
                class="imputLogin"
                placeholder="Escribe tu nombre"
                value="<%= locals.old?.first_name || '' %>"
              />
            </div>
            <div class="elementLogin">
              <label for="last_name" class="textLogin">Apellido</label>
              <input
                type="text"
                name="last_name"
                id="last_name"
                class="imputLogin"
                placeholder="Escribe tu apellido"
                value="<%= locals.old?.last_name || '' %>"
              />
            </div>
            <div class="elementLogin">
              <label for="email" class="textLogin">Email</label>
              <input
                type="email"
                name="email"
                id="email"
                class="imputLogin"
                placeholder="Escribe tu Email"
                value="<%= locals.old?.email || '' %>"
              />
            </div>
            <div class="elementLogin">
              <label for="password" class="textLogin">Contraseña</label>
              <input
                type="password"
                name="password"
                id="password"
                class="imputLogin"
                placeholder="Escribe tu contraseña"
              />
            </div>
            <div class="elementLogin">
              <button type="submit" class="btn btn-primary">
                Registrarse
              </button>
            </div>
          </form>

          <ul class="errors"></ul>

          <div class="elementLogin">
            <a href="/users/login" class="btn btn-outline-secondary w-100 mt-2">
              <i class="fa-solid fa-right-to-bracket me-2"></i> ¿Ya tenés cuenta? Iniciar sesión
            </a>
          </div>
        </div>
      </div>
    </main>

    <%- include('../Partials/footer') %>
    <script src="https://cdn.metroui.org.ua/current/metro.js"></script>
    <script src="https://kit.fontawesome.com/814cd6b91c.js"></script>
    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="/js/validations/register.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
